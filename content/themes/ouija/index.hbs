{{!< default}}
{{!-- The tag above means - insert everything in this file into the {body} of the default.hbs template --}}

{{!-- The big featured header --}}
<header class="main-header">
  <div class="hero hero-1" style="background-image: url({{asset 'img/anna.jpg'}})"></div>

  <nav class="nav-main">
    {{#if @blog.logo}}
    <a class="logo-banner" href="{{@blog.url}}">
      <img src="{{@blog.logo}}" alt="{{@blog.title}}"/>
    </a>
    {{/if}}
    <a class="logo-text screen-md-and-up left" href="{{@blog.url}}">
      <img src="{{asset 'img/logo-text.png'}}" alt="{{@blog.title}}"/>
    </a>
    <ul class="screen-md-and-up right">
      {{navigation}}
    </ul>
    <a href="javascript:;" class="screen-sm-only hamburger icon-menu"></a>
  </nav>
